# file options

--exclude Carthage,Pods,Sources/DI/NeedleGenerated.swift,Sources/Resources/Generated

# format options
--commas always
--elseposition same-line
--header ignore
--ifdef indent
--indent 4
--importgrouping testable-bottom
--linebreaks lf
--maxwidth 200
--operatorfunc spaced
--patternlet hoist
--ranges spaced
--self remove
--semicolons inline
--stripunusedargs closure-only
--swiftversion 5.3
--trimwhitespace always
--wraparguments preserve
--wrapcollections preserve

# rules
--disable strongOutlets
--enable isEmpty,blankLinesAroundMark,preferKeyPath,redundantGet